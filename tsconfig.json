{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@utils/*": [
        "src/utils/*"
      ],
      "@contexts/*": [
        "src/contexts/*"
      ],
      "@hoc/*": [
        "src/hoc/*"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@atoms/*": [
        "src/components/atoms/*"
      ],
      "@molecules/*": [
        "src/components/molecules/*"
      ],
      "@organisms/*": [
        "src/components/organisms/*"
      ],
      "@templates/*": [
        "src/components/templates/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@fonts/*": [
        "src/assets/fonts/*"
      ],
      "@styles/*": [
        "src/assets/styles/*"
      ],
      "@type/*": [
        "src/types/*"
      ],
      "src/@systems/*": [
        "src/@systems/*"
      ],
      "@svg/*": [
        "src/assets/svg/*"
      ]
    },
    "outDir": "dist",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "target": "ES5",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "suppressImplicitAnyIndexErrors": true,
    "types": [
      "node"
    ],
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "./src/*",
    "/src/*",
    "./src/**/*",
    "./config/*",
    "/config/*",
    "./@types/*",
    "./pre-build"
  ],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./dist",
  ],
  "esModuleInterop": true
}
